<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/images"
    tools:context=".Moo_one">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView_one"
                    android:layout_width="wrap_content"
                    android:layout_height="218dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/moo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="تخم مرغ : منبع غنی از پروتئین - زینک - سلنیوم و آهن که توانایی رساندن اکسیژن کافی به موها را فراهم می کند."
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="ماهی: به خصوص ماهی آبهای آزاد که حاوی ویتامین D و امگا 3 فراوانی هستند."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="سیب زمینی شیرین : آنتی اکسیدان سرشار سیب زمینی شیرین به کمک موهایتان خواهد آمد."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="اسفناج: در واقع اکثر سبزیجات با برگ های سبز تیره منابع خوبی از انواع ویتامین های مورد نیاز برای مو و پوست هستند."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="ماست: کلسیم و ویتامین D موجود در آن یکی از لازمه های مو برای رشد و تقویت است"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="عدس: حبوباتی که سرشار از آهن - زینک - بیوتین و... است برای افرادی که رژیم های لاغری دارند مناسب تر است."
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_txt"
                    android:padding="10dp"
                    android:text="خانواده توت ها: این دسته از میوه ها در کنار تقویت مو به زیبایی و براقیت مو نیز کمک می کنند."
                    android:textColor="#000000"
                    android:textStyle="bold" />


            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>